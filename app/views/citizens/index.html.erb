<p id="notice"><%= notice %></p>

<h1>Citizens</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Origin state</th>
      <th>Origin city</th>
      <th>Origin street</th>
      <th>Residence state</th>
      <th>Residence city</th>
      <th>Residence street</th>
      <th>Contesting</th>
      <th>Image</th>
      <th>Signature</th>
      <th>Card ready</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citizens.each do |citizen| %>
      <tr>
        <td><%= citizen.first_name %></td>
        <td><%= citizen.last_name %></td>
        <td><%= citizen.age %></td>
        <td><%= citizen.dob %></td>
        <td><%= citizen.gender %></td>
        <td><%= citizen.origin_state %></td>
        <td><%= citizen.origin_city %></td>
        <td><%= citizen.origin_street %></td>
        <td><%= citizen.residence_state %></td>
        <td><%= citizen.residence_city %></td>
        <td><%= citizen.residence_street %></td>
        <td><%= citizen.contesting %></td>
        <td><%= citizen.image %></td>
        <td><%= citizen.signature %></td>
        <td><%= citizen.card_ready %></td>
        <td><%= link_to 'Show', citizen %></td>
        <td><%= link_to 'Edit', edit_citizen_path(citizen) %></td>
        <td><%= link_to 'Destroy', citizen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

