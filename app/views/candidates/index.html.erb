<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Party</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.party.code %></td>
        <td><%= candidate.office.name %></td>
        <td><%= link_to 'Show', citizen_candidate_path(@citizen, candidate) %></td>
        <td><%= link_to 'Edit', edit_citizen_candidate_path(@citizen, candidate) %></td>
        <td><%= link_to 'Destroy', citizen_candidate_path(@citizen, candidate), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

